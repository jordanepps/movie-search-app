<% include partials/header %>
    <div class="container">
        <%if(typeof data["Search"] == 'undefined') {%>
            <div>
                <h3 id="no-results">No results for <em><%= query %></em> </h3>
            </div>
            <div id="home">
                <a class="btn" href='/'>Search Again</a>
            </div>
            <%} else {%>
            <div id="home">
                <a class="btn" href='/'>Search Again</a>
            </div>
            <div>
                <h3>Results for <em><%= query %></em> </h3>
            </div>
            <div class="row">
                <% data['Search'].forEach(function(movie){ %>
                    <div class="col s12 m4 l3">
                        <div class="card blue-grey">
                            <% if(movie['Poster'] !== 'N/A') { %>
                                 <img class="responsive-img" src="<%= movie['Poster'] %>">
                            <% } %>
                            <h4 class="title white-text"> <%= movie['Title'] %> </h4>
                            <form action="/movie" method="GET">
                                <input type="hidden" name="search" value="<%= movie['imdbID'] %>">
                                <input class="btn btn-primary view-more" type="submit" value="View More">
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } %>

        </div>
    </div>




<% include partials/footer %>
